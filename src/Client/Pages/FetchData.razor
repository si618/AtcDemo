@page "/fetchdata"
@using AtcDemo.Shared
@inject HttpClient Http

<PageTitle>ATC Demo</PageTitle>

<h1>ATC Demo</h1>

<p>Loads all ATC records via WebAPI in a single call.</p>

@if (chemicals == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
                <th>Daily Defined Dose</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chemical in chemicals)
            {
                <tr>
                    <td>@chemical.Code</td>
                    <td>@chemical.Name</td>
                    <td>
                        <table class="table">
                            @foreach (var dose in chemical.Doses)
                            {
                                <tr>
                                    <td>@dose.DailyDefinedDose</td>
                                    <td>@dose.AdministrationRoute</td>
                                </tr>
                            }
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private Atc.Chemical[]? chemicals;

    protected override async Task OnInitializedAsync()
    {
        chemicals = await Http.GetFromJsonAsync<Atc.Chemical[]>("Atc");
    }
}
